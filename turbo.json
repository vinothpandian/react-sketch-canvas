{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dev:test": {
      "cache": false
    },
    "ci:test": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "unit:test": {
      "dependsOn": [],
      "cache": false,
      "outputs": []
    },
    "preview": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    }
  }
}
